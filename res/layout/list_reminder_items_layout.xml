<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="@drawable/yellow" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="4dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#FF1F1F" >
    </FrameLayout>

    <TextView
        android:id="@+id/txtReminderContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frameLayout1"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/frameLayout1"
        android:ellipsize="end"
        android:maxWidth="175dp"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSetAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frameLayout1"
        android:layout_alignLeft="@+id/txtReminderContent"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded"
        android:padding="3dp"
        android:textColor="#111"
        android:textStyle="bold" />

</RelativeLayout>