<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dp" >

    <ImageView
        android:id="@+id/imgItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/about" />

    <TextView
        android:id="@+id/txtItems"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgItems"
        android:layout_alignTop="@+id/imgItems"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/imgItems"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNoItems"
        android:layout_width="35dp"
        android:background="@drawable/rounded"
        android:textColor="#111"
        android:gravity="center"        
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtItems"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtItems"
        android:layout_marginRight="5dp"
         />

</RelativeLayout>